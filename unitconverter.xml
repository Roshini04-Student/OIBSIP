<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Enter Value:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input_value"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_label"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/unit_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_value"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/convert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/unit_spinner"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Convert" />

    <TextView
        android:id="@+id/result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convert_button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Result:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/result_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_label"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
